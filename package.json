{
  "name": "cypress-test-project",
  "version": "1.0.0",
  "description": "Portfolio Cypress E2E Testing Project",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --browser chrome"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "javascript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^13.17.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "rimraf": "^6.1.2"
  },

  "scripts": {
 
  

  "clean:reports": "rimraf cypress/reports", 
  

  "merge:reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/report.json",

  "generate:report": "marge cypress/reports/report.json -f report -o cypress/reports",
  

  "test:api:report": "npm run clean:reports && npx cypress run --spec 'cypress/e2e/api/json_placeholder_crud_tests.cy.js' --browser chrome && npm run merge:reports && npm run generate:report"
}
}
